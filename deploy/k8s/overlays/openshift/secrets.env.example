# OpenShift defaults. Replace all CHANGE_ME values.
EVIDRA_DB_HOST=postgres.evidra.svc.cluster.local
EVIDRA_DB_PORT=5432
EVIDRA_DB_NAME=evidra
EVIDRA_DB_USER=evidra
EVIDRA_DB_PASSWORD=CHANGE_ME_DB_PASSWORD

# Required unless OIDC/JWT auth is enabled and enforced at ingress/API.
EVIDRA_READ_TOKEN=CHANGE_ME_READ_TOKEN

# Required in openshift overlay because collector is enabled by default.
EVIDRA_ARGO_API_TOKEN=CHANGE_ME_ARGO_API_TOKEN

# Optional ingest/webhook auth (not required in v0.1):
# EVIDRA_INGEST_TOKEN=CHANGE_ME_INGEST_TOKEN

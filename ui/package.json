{
  "name": "evidra-ui",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:argocd-extension": "tsc -b && vite build -c vite.extension.config.ts",
    "preview": "vite preview",
    "test": "vitest run",
    "e2e:install": "playwright install --with-deps chromium",
    "e2e:use-cases-check": "bash ../scripts/check-ui-use-cases.sh",
    "e2e": "playwright test",
    "e2e:headed": "playwright test --headed"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.1.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@playwright/test": "^1.54.2",
    "jsdom": "^26.0.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.8",
    "vitest": "^2.1.8"
  }
}
